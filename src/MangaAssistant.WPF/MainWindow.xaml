<Window x:Class="MangaAssistant.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaAssistant.WPF"
        xmlns:controls="clr-namespace:MangaAssistant.WPF.Controls;assembly=MangaAssistant.WPF.Controls"
        xmlns:viewmodels="clr-namespace:MangaAssistant.WPF.ViewModels"
        xmlns:converters="clr-namespace:MangaAssistant.WPF.Converters"
        Title="Manga Assistant" 
        Height="1000" 
        Width="1248"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E"
        mc:Ignorable="d">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:PathToImageSourceConverter x:Key="PathToImageSourceConverter"/>
        
        <!-- Button Style -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="Margin" Value="0,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="ButtonBorder"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                VerticalAlignment="Center"/>
                            </Border>
                            <Border x:Name="HighlightBorder"
                                    Background="#3399FF"
                                    Width="4"
                                    HorizontalAlignment="Left"
                                    CornerRadius="2"
                                    Opacity="0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#3E3E42"/>
                                <Setter TargetName="HighlightBorder" Property="Opacity" Value="1"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="HighlightBorder"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="HighlightBorder"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="0" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="Active">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#3E3E42"/>
                                <Setter TargetName="HighlightBorder" Property="Opacity" Value="1"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#B0B0B0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="12,16,0,12"/>
        </Style>
        
        <!-- Footer Text Style -->
        <Style x:Key="FooterTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#808080"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="12,4,0,0"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Border Grid.Column="0" 
                Background="#252526" 
                BorderBrush="#3E3E42" 
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Gradient Overlay -->
                <Border Grid.RowSpan="3">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                            <GradientStop Color="#252526" Offset="0"/>
                            <GradientStop Color="#1E1E1E" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                
                <!-- Shadow Effect -->
                <Border Grid.RowSpan="3">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="5" 
                                        BlurRadius="10" 
                                        Opacity="0.3" 
                                        Direction="0"/>
                    </Border.Effect>
                </Border>
                
                <!-- Top Bar -->
                <Grid Grid.Row="0">
                    <StackPanel Orientation="Horizontal" 
                              Margin="24,0">
                        <Image Source="/Assets/logo.png" 
                               Height="40" 
                               Width="40" 
                               Margin="0,0,16,0"/>
                        <TextBlock Text="Manga Assistant"
                                 Foreground="White"
                                 FontSize="22"
                                 FontWeight="SemiBold"
                                 VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
                
                <!-- Menu Items -->
                <ScrollViewer Grid.Row="1" 
                            VerticalScrollBarVisibility="Auto" 
                            HorizontalScrollBarVisibility="Disabled">
                    <StackPanel Margin="24,20,24,24">
                        <!-- Library Section -->
                        <TextBlock Text="LIBRARY" 
                                 Style="{StaticResource SectionHeaderStyle}"/>
                        <Button x:Name="LibraryViewButton"
                                Style="{StaticResource MenuButtonStyle}"
                                Click="LibraryView_Click"
                                Tag="Active">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8F1;" 
                                         FontFamily="Segoe MDL2 Assets"
                                         FontSize="18"
                                         Margin="0,0,16,0"/>
                                <TextBlock Text="Library View"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="SettingsButton"
                                Style="{StaticResource MenuButtonStyle}"
                                Click="Settings_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE713;" 
                                         FontFamily="Segoe MDL2 Assets"
                                         FontSize="18"
                                         Margin="0,0,16,0"/>
                                <TextBlock Text="Settings"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                        
                        <!-- Tools Section (Optional) -->
                        <TextBlock Text="TOOLS" 
                                 Style="{StaticResource SectionHeaderStyle}"
                                 Margin="12,32,0,12"/>
                        <Button Style="{StaticResource MenuButtonStyle}"
                                Click="ViewLogs_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE9D9;" 
                                         FontFamily="Segoe MDL2 Assets"
                                         FontSize="18"
                                         Margin="0,0,16,0"/>
                                <TextBlock Text="View Logs"
                                         FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
                
                <!-- Footer -->
                <StackPanel Grid.Row="2" Margin="24,0,24,24">
                    <Border Height="1" Background="#3E3E42" Margin="0,0,0,16"/>
                    <TextBlock Text="Manga Assistant v1.0" 
                             Style="{StaticResource FooterTextStyle}"/>
                    <TextBlock Text="© 2025 All Rights Reserved" 
                             Style="{StaticResource FooterTextStyle}"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Content Area -->
        <Grid Grid.Column="1">
            <ContentControl x:Name="MainContent"/>
        </Grid>
    </Grid>
</Window>
