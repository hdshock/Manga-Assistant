<Window x:Class="MangaAssistant.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MangaAssistant.WPF"
        xmlns:controls="clr-namespace:MangaAssistant.WPF.Controls;assembly=MangaAssistant.WPF.Controls"
        xmlns:viewmodels="clr-namespace:MangaAssistant.WPF.ViewModels"
        xmlns:converters="clr-namespace:MangaAssistant.WPF.Converters"
        mc:Ignorable="d"
        Title="Manga Assistant" Height="1000" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    
    <Window.Resources>
        <!-- Converters -->
        <converters:PathToImageSourceConverter x:Key="PathToImageSourceConverter"/>
        
        <!-- Button Style -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3E3E42"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar -->
        <Border Grid.Column="0" 
                Background="#252526" 
                BorderBrush="#3E3E42" 
                BorderThickness="0,0,1,0">
            <StackPanel Margin="16">
                <!-- Library Section -->
                <TextBlock Text="LIBRARY" 
                         Foreground="#B0B0B0" 
                         FontSize="12" 
                         Margin="8,0,0,8"/>
                <Button Style="{StaticResource MenuButtonStyle}"
                        Click="LibraryView_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE8F1;" 
                                 FontFamily="Segoe MDL2 Assets" 
                                 Margin="0,0,8,0"/>
                        <TextBlock Text="Library View"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource MenuButtonStyle}"
                        Click="Settings_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="&#xE713;" 
                                 FontFamily="Segoe MDL2 Assets" 
                                 Margin="0,0,8,0"/>
                        <TextBlock Text="Settings"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Grid Background="#252526">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Box -->
                <Border Background="#333337" 
                        CornerRadius="4"
                        Margin="20,15"
                        Height="30">
                    <Grid>
                        <TextBox Background="Transparent"
                                 Foreground="White"
                                 BorderThickness="0"
                                 VerticalContentAlignment="Center"
                                 Padding="30,0,10,0"/>
                        <TextBlock Text="🔍"
                                 Foreground="#808080"
                                 VerticalAlignment="Center"
                                 Margin="10,0,0,0"/>
                    </Grid>
                </Border>

                <!-- View Options -->
                <StackPanel Grid.Column="1" 
                          Orientation="Horizontal" 
                          Margin="10,0,20,0">
                    <Button Content="📱 Grid" 
                            Width="80" 
                            Height="30" 
                            Margin="5,0"
                            Style="{StaticResource MenuButtonStyle}"/>
                    <Button Content="📝 List" 
                            Width="80" 
                            Height="30" 
                            Margin="5,0"
                            Style="{StaticResource MenuButtonStyle}"/>
                </StackPanel>
            </Grid>

            <!-- Filter Bar -->
            <StackPanel Grid.Row="1" 
                        Background="#2D2D30"
                        Orientation="Horizontal"
                        Margin="0,0,0,1">
            </StackPanel>

            <!-- Content Area -->
            <Grid Grid.Row="2">
                <!-- Main Library View -->
                <ScrollViewer x:Name="LibraryView"
                            VerticalScrollBarVisibility="Auto" 
                            HorizontalScrollBarVisibility="Disabled">
                    <ItemsControl ItemsSource="{Binding Series}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Margin="15"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <controls:MangaCard 
                                    Width="133"
                                    Height="186"
                                    Margin="8"
                                    Title="{Binding Title}"
                                    Progress="{Binding Progress}"
                                    CoverSource="{Binding CoverPath, Converter={StaticResource PathToImageSourceConverter}}"
                                    UnreadChapters="{Binding ChapterCount}"
                                    SeriesClicked="MangaCard_SeriesClicked"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Series Detail View -->
                <Grid x:Name="SeriesDetailContainer" 
                      Background="#1E1E1E"
                      Visibility="Collapsed"/>

                <!-- Settings View -->
                <Grid x:Name="SettingsContainer" Visibility="Collapsed"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
